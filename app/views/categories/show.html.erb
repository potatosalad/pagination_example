<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @category.name %>
</p>

<ul>
  <%- for clip in @category.clips %>
  <li>
    <%= link_to(image_tag(clip.image.url(:thumb))+' '+clip.title, clip) %>
  </li>
  <%- end %>
</ul>

<%= link_to 'Edit', edit_category_path(@category) %> |
<%= link_to 'Back', categories_path %>
